# Visual CRM FastAPI Backend Environment Configuration

# Project Configuration
PROJECT_NAME="Visual CRM"
PROJECT_VERSION="1.0.0"
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_V1_PREFIX=/api/v1

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Supabase Configuration
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-key-here

# Database Configuration (Optional - for direct PostgreSQL connection)
DATABASE_URL=postgresql://username:password@localhost:5432/visual_crm

# Security Configuration
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO

# Development Configuration
RELOAD=true
WORKERS=1

# Environment
ENVIRONMENT=development